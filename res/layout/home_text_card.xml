<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/card_shadow"
    android:elevation="@dimen/generic_elevation_height"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/card_text_icon_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_drawer_content_description"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/card_text_title_label"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:alpha=".6"
        android:shadowColor="#757575"
	    android:shadowDx="1"
	    android:shadowDy="1"
	    android:shadowRadius="1"
        android:maxLines="1"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:textColor="@color/text_card_title"
        android:layout_toEndOf="@+id/card_text_icon_image"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/card_text_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/text_card_date"
        android:maxLines="1"
        android:layout_below="@+id/card_text_title_label"
        android:layout_toEndOf="@+id/card_text_icon_image"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <View
        android:id="@+id/card_text_line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_text_icon_image"
        android:background="@color/list_divider" />
    
	<TextView
        android:id="@+id/card_text_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_card_content"
        android:layout_margin="10dp"
        android:maxLines="5"
        android:paddingBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_text_line_separator"
        android:text="" />

	<LinearLayout
	    android:id="@+id/card_text_footer_holder"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:background="@color/text_card_footer"
	    android:orientation="horizontal"
	    android:layout_below="@+id/card_text_content_label"
	    android:layout_alignParentStart="true"
	    android:layout_alignParentBottom="true" >
	</LinearLayout>

</RelativeLayout>

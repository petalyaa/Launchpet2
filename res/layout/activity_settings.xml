<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/white" >
    
    <RelativeLayout
        android:id="@+id/setting_top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/generic_elevation_height"
        android:background="@color/toolbar_color"
        android:padding="15dp"
        android:layout_alignParentTop="true" >
        
        <TextView
	        android:id="@+id/settings_label"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_label"
	        android:layout_centerVertical="true"
	        android:layout_alignParentStart="true"
	        android:layout_marginStart="20dp"
	        android:textColor="@android:color/white"
	        android:alpha=".7"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
    
    <View
        android:id="@+id/settings_line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setting_top_header"
        android:background="@android:color/transparent" />

    <ListView
        android:id="@+id/settings_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_below="@+id/settings_line_separator"
        android:layout_alignParentStart="true" >
    </ListView>

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_drawer_icon_view_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/native_drawer_icon_view_icon"
        android:contentDescription="@string/app_drawer_content_description"
        android:layout_width="@dimen/apps_icon_size"
        android:layout_height="@dimen/apps_icon_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />
    
    <RelativeLayout 
        android:id="@+id/native_drawer_icon_folder"
        android:layout_width="@dimen/apps_icon_size"
        android:layout_height="@dimen/apps_icon_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
    </RelativeLayout>

    <TextView
        android:id="@+id/native_drawer_icon_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/native_drawer_icon_view_icon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text_color"
        android:textSize="12sp"
        android:maxLines="1"
        android:singleLine="true"
        android:alpha=".7"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@android:color/black"
    android:rowCount="2"
    android:elevation="@dimen/generic_elevation_height"
    android:columnCount="2" >

    <ImageView
        android:id="@+id/folder_view_icon_0"
        android:contentDescription="@string/app_drawer_content_description"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/folder_view_icon_1"
        android:contentDescription="@string/app_drawer_content_description"
        android:layout_column="1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_row="0"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/folder_view_icon_2"
        android:contentDescription="@string/app_drawer_content_description"
        android:layout_column="0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_row="1"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/folder_view_icon_3"
        android:contentDescription="@string/app_drawer_content_description"
        android:layout_column="1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_row="1"
        android:src="@drawable/ic_launcher" />

</GridLayout>
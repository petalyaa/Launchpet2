<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/home_card_margin_bottom"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/generic_elevation_height"
    card_view:cardCornerRadius="@dimen/home_card_radius" >

    <RelativeLayout
        android:id="@+id/card_parent_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_ripple"
        android:elevation="@dimen/generic_elevation_height" >

        <ImageView
            android:id="@+id/card_image_image"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_drawer_content_description"
            android:src="@drawable/placeholder" />

        <RelativeLayout
            android:id="@+id/card_image_title_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/card_image_image"
            android:background="#F44336"
            android:elevation="@dimen/generic_elevation_height"
            tools:ignore="UseCompoundDrawables" >

            <ImageView
                android:id="@+id/card_image_icon_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:contentDescription="@string/app_drawer_content_description"
                android:src="@drawable/rss" />

            <TextView
                android:id="@+id/card_image_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/card_image_icon_image"
                android:layout_toStartOf="@+id/card_image_title_gif"
                android:alpha=".9"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif-condensed"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:scrollHorizontally="true"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/card_image_title_gif"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@android:color/white"
                android:contentDescription="@string/app_drawer_content_description"
                android:elevation="@dimen/generic_elevation_height"
                android:src="@drawable/gif" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_image_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_ripple"
            android:elevation="100dp" >
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content" >
    
    <ImageButton
        android:id="@+id/favorite_menu_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/fab_ripple"
        android:contentDescription="@string/app_drawer_content_description"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_favorite"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/favorite_menu_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/favorite_menu_item_button"
        android:fontFamily="sans-serif-light"
        android:layout_marginEnd="20dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:elevation="3dp"
        android:background="@drawable/floating_menu_item_label"
        android:alpha=".8"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />
    
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background"
    tools:context="org.pet.launchpet2.GroupAppsSettingActivity" >

    <RelativeLayout
        android:id="@+id/group_apps_toolbar"
	    android:layout_width="match_parent"
	    android:background="@color/setting_toolbar_background"
	    android:elevation="@dimen/generic_elevation_height"
	    android:layout_height="60dp" >

        <ImageButton
            android:id="@+id/group_apps_toolbar_add_btn"
            android:contentDescription="@string/app_drawer_content_description"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:alpha=".8"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_action_add" />

        <ImageButton
            android:id="@+id/group_apps_toolbar_back_btn"
            android:contentDescription="@string/app_drawer_content_description"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:alpha=".8"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_arrow_back" />

        <TextView
            android:id="@+id/group_apps_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:alpha=".8"
            android:layout_toEndOf="@+id/group_apps_toolbar_back_btn"
            android:text="@string/settings_item_group_application"
            android:textColor="@color/setting_toolbar_title_color"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
	</RelativeLayout>

    <ListView
        android:id="@+id/group_apps_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_apps_toolbar"
        android:layout_centerHorizontal="true" >
    </ListView>

</RelativeLayout>
